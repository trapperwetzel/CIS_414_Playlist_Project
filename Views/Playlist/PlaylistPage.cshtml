@model PlaylistViewModel

@{
    ViewData["Title"] = "PlaylistPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>

<div class="mainSearchBody">
    <div class="animate__animated animate__fadeInDown">
        <h2 id="moodsTitleText">Playlists</h2>

        <!-- Current/Temporary Playlist Section -->
        <div class="card bg-dark text-white mb-4 animate__animated animate__fadeIn">
            <div class="card-header">
                <h3>Current Playlist</h3>
            </div>
            <div class="card-body">
                @if (!Model.TempPlaylist.Songs.Any())
                {
                    <p>No songs in current playlist.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th id="titleheader">Title</th>
                                    <th id="artistheader">Artist</th>
                                    <th id="genreheader">Genre</th>
                                    <th id="moodsheader">Moods</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody class="table-body">
                                @foreach (var song in Model.TempPlaylist.Songs)
                                {
                                    <tr>
                                        <td id="songtitle">@song.SongTitle</td>
                                        <td id="songartist">@song.ArtistName</td>
                                        <td>
                                            @if (song.Genres?.Any() == true)
                                            {
                                                foreach (var genre in song.Genres)
                                                {
                                                    <span id="genrename">@genre.GenreName</span>
                                                }
                                            }
                                        </td>
                                        <td>
                                            @if (song.Moods?.Any() == true)
                                            {
                                                foreach (var mood in song.Moods)
                                                {
                                                    <span id="moodname">@mood.MoodName</span>
                                                }
                                            }
                                        </td>
                                        <td>
                                            <form asp-action="RemoveSongFromTemp" method="post" style="display: inline;">
                                                <input type="hidden" name="songId" value="@song.SongId" />
                                                <button type="submit" id="playlistbutton">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <form asp-action="ClearTemp" method="post" style="display: inline;">
                            <button type="submit" id="playlistbutton">Clear Playlist</button>
                        </form>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <button type="button" id="playlistbutton" data-bs-toggle="modal" data-bs-target="#savePlaylistModal">
                                Save Playlist
                            </button>
                        }
                        else
                        {
                            <a class="btn btn-bottom-stripe btn-bottom-stripe--purple" asp-area="Identity" asp-page="/Account/Login">
                                Login to Save Playlist
                            </a>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Saved Playlists Section -->
        @if (User.Identity.IsAuthenticated)
        {
            <div class="mt-4 animate__animated animate__fadeIn">
                <h3 id="moodsTitleText">My Saved Playlists</h3>
                <div class="row">
                    @foreach (var playlist in Model.SavedPlaylists)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card bg-dark text-white">
                                <div class="card-body">
                                    <h5 class="card-title">@playlist.PlaylistName</h5>
                                    <p class="card-text">
                                        <small class="text-muted">@playlist.Songs.Count songs</small>
                                    </p>
                                    <div>
                                        <a asp-action="Details" asp-route-id="@playlist.PlaylistId" 
                                           id="playlistbutton">View</a>
                                        <a asp-action="Delete" asp-route-id="@playlist.PlaylistId" 
                                           id="playlistbutton">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<!-- Save Playlist Modal -->
<div class="modal fade" id="savePlaylistModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title">Save Playlist</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="SaveTempPlaylist" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="playlistName">Playlist Name:</label>
                        <input type="text" class="form-control bg-dark text-white" 
                               id="playlistName" name="playlistName" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="playlistbutton" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" id="playlistbutton">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>